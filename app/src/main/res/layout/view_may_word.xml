<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp">
    <TextView
        android:id="@+id/tx_num_guard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/main_title"
        android:text="10 / 6014"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/tx_word"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="danci"
        android:layout_marginTop="30dp"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/tx_program"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="yinbiao"
        android:textSize="18sp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tx_word"/>

    <TextView
        android:id="@+id/tx_chinese"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="解析"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tx_program"/>

    <TextView
        android:id="@+id/tx_sentence"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="sentencesentencesentencesentence"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tx_chinese"/>

    <TextView
        android:id="@+id/tx_sentence_chinese"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="句子翻译"
        android:textSize="18sp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tx_sentence"/>

    <Button
        android:id="@+id/btn_add_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="加入生词本"
        android:padding="10dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/tel_name"/>

    <Button
        android:id="@+id/btn_open_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="生词本"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/btn_add_new"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/tel_name"/>

</RelativeLayout>